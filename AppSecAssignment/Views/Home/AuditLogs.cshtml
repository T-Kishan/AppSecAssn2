@model IEnumerable<AppSecAssignment.Models.AuditLog>

@{
    ViewData["Title"] = "Security Audit Logs";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0"><i class="bi bi-shield-lock"></i> Security Audit Logs</h2>
            <p class="mb-0 text-muted">Recent authentication events and security actions</p>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>User Email</th>
                                <th>Action</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr class="@(log.Action.Contains("Failed") || log.Action.Contains("Locked") ? "table-danger" : log.Action.Contains("Success") ? "table-success" : "")">
                                    <td>@log.Id</td>
                                    <td>@log.UserId</td>
                                    <td>
                                        @if (log.Action.Contains("Success"))
                                        {
                                            <span class="badge bg-success">? @log.Action</span>
                                        }
                                        else if (log.Action.Contains("Failed"))
                                        {
                                            <span class="badge bg-warning text-dark">? @log.Action</span>
                                        }
                                        else if (log.Action.Contains("Locked"))
                                        {
                                            <span class="badge bg-danger">?? @log.Action</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@log.Action</span>
                                        }
                                    </td>
                                    <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3">
                    <strong>Note:</strong> Showing the last 50 audit log entries. 
                    <span class="badge bg-success">Green</span> = Successful login, 
                    <span class="badge bg-warning text-dark">Yellow</span> = Failed attempt, 
                    <span class="badge bg-danger">Red</span> = Account locked
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <strong>No audit logs found.</strong> Logs will appear here after login attempts.
                </div>
            }
        </div>
        <div class="card-footer">
            <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>
