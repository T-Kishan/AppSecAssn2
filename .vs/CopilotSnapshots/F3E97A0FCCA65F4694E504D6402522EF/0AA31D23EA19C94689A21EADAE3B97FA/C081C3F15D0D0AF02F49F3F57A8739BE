@using AppSecAssignment.Services
@model AppSecAssignment.Models.ApplicationUser

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Fresh Farm Market</h1>

    @if (Model != null)
    {
        <div class="alert alert-success">
            <h4>You are logged in!</h4>
        </div>

        <div class="card mx-auto" style="width: 24rem;">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="/uploads/@Model.PhotoPath" class="card-img-top" alt="User Photo" style="height: 250px; object-fit: cover;">
            }

            <div class="card-body text-start">

                @if (ViewData["IntegrityCheck"] != null)
                {
                    <div class="alert @ViewData["IntegrityClass"] mb-3" role="alert">
                        <strong>Integrity Check:</strong> @ViewData["IntegrityCheck"]
                    </div>
                }

                <h5 class="card-title">@Model.FullName</h5>
                <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                <p class="card-text"><strong>Mobile:</strong> @Model.MobileNo</p>
                <p class="card-text"><strong>Gender:</strong> @Model.Gender</p>

                <p class="card-text">
                    <strong>Credit Card (Decrypted):</strong>
                    <span class="text-primary">@Protect.Decrypt(Model.CreditCardNo)</span>
                </p>

                <p class="card-text">
                    <strong>About Me:</strong><br />
                    @* SECURITY: AboutMe is already HtmlEncoded in the database (see AccountController.cs line 81)
                       Using Html.Raw here to display the encoded HTML entities correctly.
                       Defense-in-depth: Could use @Model.AboutMe directly for double-encoding protection,
                       but this would display "&lt;" instead of "<" which breaks user experience.
                       
                       Current approach is secure because:
                       1. Input sanitized with HtmlEncode before DB storage (Controller)
                       2. Database contains encoded text: "&lt;script&gt;" not "<script>"
                       3. Html.Raw displays encoded text visually: "<script>" appears as text, not code
                       4. No JavaScript execution occurs
                    *@
                    @Html.Raw(Model.AboutMe)
                </p>

                <hr />

                <div class="mt-3">
                    <h6>Security Settings</h6>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="toggle2FA" 
                               @(Model.TwoFactorEnabled ? "checked" : "") 
                               onchange="toggleTwoFactor(this.checked)">
                        <label class="form-check-label" for="toggle2FA">
                            Enable Two-Factor Authentication (2FA)
                        </label>
                    </div>
                    <small class="text-muted">When enabled, you'll need a verification code to login</small>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Please <a href="/Account/Login">Login</a> or <a href="/Account/Register">Register</a> to continue.</p>
    }
</div>

@if (Model != null)
{
    <script>
        function toggleTwoFactor(enabled) {
            fetch('/Home/Toggle2FA', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ enabled: enabled })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('2FA ' + (enabled ? 'enabled' : 'disabled') + ' successfully!');
                } else {
                    alert('Failed to update 2FA setting');
                    document.getElementById('toggle2FA').checked = !enabled;
                }
            });
        }
    </script>
}