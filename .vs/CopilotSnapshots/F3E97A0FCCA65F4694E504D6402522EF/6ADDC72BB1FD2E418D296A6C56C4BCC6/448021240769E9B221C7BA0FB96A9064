using AppSecAssignment.Models;
using AppSecAssignment.Services; // Ensure this is added for DigitalSignature
using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;

namespace AppSecAssignment.Controllers
{
    public class HomeController : Controller
    {
        private readonly AuthDbContext _context;

        public HomeController(AuthDbContext context)
        {
            _context = context;
        }

        public IActionResult Index()
        {
            var userEmail = HttpContext.Session.GetString("UserEmail");

            if (string.IsNullOrEmpty(userEmail))
            {
                return View();
            }

            var user = _context.Users.FirstOrDefault(u => u.Email == userEmail);

            // SECURITY: RSA Integrity Check
            // We verify that the 'AboutMe' text in the database matches the signature.
            if (user != null && !string.IsNullOrEmpty(user.AboutMeSignature))
            {
                bool isIntegrityValid = DigitalSignature.VerifyData(user.AboutMe, user.AboutMeSignature);

                if (!isIntegrityValid)
                {
                    ViewData["IntegrityCheck"] = "WARNING: Data corruption detected! Profile data has been tampered with.";
                    ViewData["IntegrityClass"] = "alert-danger";
                }
                else
                {
                    ViewData["IntegrityCheck"] = "Data Integrity Verified (RSA Signature Valid).";
                    ViewData["IntegrityClass"] = "alert-success";
                }
            }

            return View(user);
        }

        public IActionResult Privacy()
        {
            return View();
        }

        [HttpGet]
        public IActionResult AuditLogs()
        {
            var logs = _context.AuditLogs
                .OrderByDescending(a => a.Timestamp)
                .Take(50)
                .ToList();
            return View(logs);
        }

        [HttpGet]
        public IActionResult ResignAllUsers()
        {
            // This is a one-time utility to re-sign all users after fixing the RSA key persistence issue
            var users = _context.Users.ToList();
            int resignedCount = 0;

            foreach (var user in users)
            {
                if (!string.IsNullOrEmpty(user.AboutMe))
                {
                    // Re-create the signature with the persistent key
                    user.AboutMeSignature = DigitalSignature.SignData(user.AboutMe);
                    resignedCount++;
                }
            }

            _context.SaveChanges();

            ViewData["Message"] = $"Successfully re-signed {resignedCount} users.";
            return View("ResignComplete");
        }

        [HttpPost]
        public async Task<IActionResult> Toggle2FA([FromBody] Toggle2FARequest request)
        {
            var userEmail = HttpContext.Session.GetString("UserEmail");
            if (string.IsNullOrEmpty(userEmail))
            {
                return Json(new { success = false, message = "Not authenticated" });
            }

            var user = await _context.Users.FirstOrDefaultAsync(u => u.Email == userEmail);
            if (user == null)
            {
                return Json(new { success = false, message = "User not found" });
            }

            user.TwoFactorEnabled = request.Enabled;
            await _context.SaveChangesAsync();

            // Audit log
            _context.AuditLogs.Add(new AuditLog
            {
                UserId = userEmail,
                Action = $"2FA {(request.Enabled ? "Enabled" : "Disabled")}",
                Timestamp = DateTime.Now
            });
            await _context.SaveChangesAsync();

            return Json(new { success = true });
        }

        public class Toggle2FARequest
        {
            public bool Enabled { get; set; }
        }

        [Route("Home/Error/{statusCode}")]
        public IActionResult Error(int statusCode)
        {
            if (statusCode == 404)
            {
                return View("Error");
            }
            return View("Error");
        }
    }
}